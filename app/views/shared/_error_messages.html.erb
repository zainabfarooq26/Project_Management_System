<% if object.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <strong><%= pluralize(object.errors.count, "error") %> prevented submission:</strong>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
