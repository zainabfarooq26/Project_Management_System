<%= form_with(model: @time_log, local: true) do |form| %>
  <div class="card shadow-sm p-4 mb-4">
    <h4 class="card-title mb-4 text-center">Log Time</h4>
    <div class="mb-3">
      <%= form.label :hours, "Log Hours", class: "form-label" %>
      <%= form.number_field :hours, class: "form-control", min: 0, step: 0.5, placeholder: "Enter hours worked", required: true %>
    </div>
    <div class="mb-3">
      <%= form.label :description, "Description", class: "form-label" %>
      <%= form.text_area :description, class: "form-control", rows: 4, placeholder: "Brief description of work done", required: true %>
    </div>
    <div class="text-center">
      <%= form.submit "Log Time", class: "btn btn-primary w-50" %>
    </div>
  </div>
<% end %>
