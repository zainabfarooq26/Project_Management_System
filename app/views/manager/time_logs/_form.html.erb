<%= form_with url: manager_client_project_time_logs_path(project.client, project), local: true do |form| %>
    <div class="mb-3">
      <%= form.label :hours, "Log Hours", class: "form-label" %>
      <%= form.number_field :hours, class: "form-control", min: 0, step: 0.5, placeholder: "Enter hours worked" %>
    </div>
  
    <div class="mb-3">
      <%= form.label :description, "Description", class: "form-label" %>
      <%= form.text_area :description, class: "form-control", rows: 2, placeholder: "Brief description of work done" %>
    </div>
  
    <div class="mb-3">
      <%= form.submit "Log Time", class: "btn btn-primary w-100" %>
    </div>
  <% end %>
  