<h1>Project Details</h1>

<div class="card">
  <div class="card-body">
    <h3><%= @project.title %></h3>
    <p><strong>Description:</strong> <%= @project.description %></p>
  </div>
</div>
<h3> Comments</h3>
<ul>
  <% @comments.each do |comment| %>
    <li>
      <strong>
        <%= "#{comment.user.profile.first_name} #{comment.user.profile.last_name}" if comment.user.profile %>
      </strong>: <%= comment.content %> (on <%= comment.created_at.strftime("%d %b %Y") %>)
    </li>
  <% end %>
</ul>

<div class="mt-3">
  <%= link_to 'Back to dashboard', manager_client_projects_path(@client), class: 'btn btn-secondary' %>
</div>


