<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Projects Dashboard</a>
    <div class="d-flex align-items-center">
      <!-- Profile Button (Triggers Modal) -->
      <button class="btn btn-outline-light me-2" data-bs-toggle="modal" data-bs-target="#profileDetailsModal">
        Profile
      </button>
      <!-- Sign-Out Button -->
      <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-outline-light me-3' %>
    </div>
  </div>
</nav>

<!-- Include the Profile Modal -->
<%= render 'shared/profile_modal' %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>Projects Listing</h2>
  
  <% if current_user.is_manager? %>  <!-- Show New Project link for Managers only -->
    <%= link_to "New Project", new_manager_client_project_path(@client), class: "btn btn-outline-dark me-5" %>
  <% end %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Attachments</th>
      <% unless current_user.is_manager? %> <!-- Only for users -->
        <th>Comments</th>
        <th>Time Logs</th>
      <% end %>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if @projects.present? %>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.title %></td>
          <td><%= project.description %></td>
          <td>
            <% if project.attachments.attached? %>
              <ul class="list-unstyled">
                <% project.attachments.each do |attachment| %>
                  <li>
                    <%= link_to attachment.filename, rails_blob_path(attachment, disposition: "attachment"), class: "btn btn-link" %>
                  </li>
                <% end %>
              </ul>
            <% else %>
              No attachments
            <% end %>
          </td>

          <% unless current_user.is_manager? %> <!-- Only show for users -->
            <td>
              <ul id="comments-list-<%= project.id %>" class="list-group list-group-flush">
                <% project.comments.limit(5).each do |comment| %>  
                  <li class="list-group-item">
                  <strong><%= "#{comment.user.profile.first_name} #{comment.user.profile.last_name}".strip.presence || "Unknown User" %>:</strong> 
                  <%= comment.content %>
                  <% if comment.user == current_user %>  <!-- Only show edit/delete for the comment's author -->
                    <div class="float-end">
                      <%= link_to 'Edit', edit_manager_client_project_comment_path(project.client, project, comment), class: "btn btn-warning btn-sm" %>
                      <%= link_to 'Delete', manager_client_project_comment_path(project.client, project, comment),  data: { turbo_method: :delete,turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
                    </div>
                  <% end %>
                  </li>
                <% end %>
              </ul>
              <% if project.comments.empty? %>
                <span class="text-muted">No comments yet</span>
              <% end %>
            </td>

            <td>
              <ul id="timelogs-list-<%= project.id %>" class="list-group list-group-flush">
                <% project.time_logs.limit(5).each do |time_log| %>
                  <li class="list-group-item">
                    <strong><%= time_log.user.name %>:</strong> <%= time_log.hours %> hours logged
                  </li>
                <% end %>
              </ul>
              <% if project.time_logs.empty? %>
                <span class="text-muted">No time logs yet</span>
              <% end %>
            </td>
          <% end %>

          <td>
            <%= link_to "Show", manager_client_project_path(project.client, project), class: "btn btn-success" %>

            <% if current_user.is_manager? %> 
              <%= link_to "Edit", edit_manager_client_project_path(project.client, project), class: "btn btn-warning" %>
              <%= link_to "Delete", manager_client_project_path(project.client, project), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
              <%= link_to "View Payments", manager_client_project_payments_path(project.client, project), class: "btn btn-primary" %>
            <% else %> 
              <%= link_to "Add Comment", manager_client_project_new_comment_path(project.client, project), class: "btn btn-info" %>
              <%= link_to "Add Time Log", manager_client_project_time_logs_path(project.client, project), class: "btn btn-primary" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="6">No projects available</td>
      </tr>
    <% end %>
  </tbody>
</table>
