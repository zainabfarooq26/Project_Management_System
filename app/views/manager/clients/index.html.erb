<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
  <div class="container-fluid">
    <!-- Navbar Title Based on User Role -->
    <a class="navbar-brand" href="#">
      <%= current_user.is_manager? ? "Manager Dashboard" : "Clients Listing" %> <!-- Show appropriate title -->
    </a>
    <div class="d-flex align-items-center">
      <!-- Profile Button (Triggers Modal) -->
      <button class="btn btn-outline-light me-2" data-bs-toggle="modal" data-bs-target="#profileDetailsModal">
        Profile
      </button>
      <% if current_user.is_manager? %>  <!-- Show New Client link for Managers only -->
    <%= link_to "New Client", new_manager_client_path, class: "btn btn-outline-light me-3" %>
  <% end %>
      <!-- Sign-Out Button -->
      <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-outline-light me-3' %>
    </div>
  </div>
</nav>

<!-- Include the Profile Modal -->
<%= render 'shared/profile_modal' %>
<p>Welcome <%= current_user.is_manager? ? "manager" : "user" %>, <%= current_user.email %>!</p>
<div class="d-flex justify-content-between align-items-center mb-3">
  <h2><i class="bi bi-kanban"></i> Clients Listing</h2>

  <!-- Search Bar (Centered Right) -->
  <%= form_tag manager_clients_path, method: :get, class: "ms-auto me-3 w-50" do %>
    <div class="input-group">
      <!-- Category Dropdown -->
      <select name="search_category" class="form-select" style="max-width: 180px;">
        <option value="">All Categories</option>
        <option value="name">Name</option>
        <option value="email">Email</option>
        <option value="phone">Phone No</option>
        <option value="address">Address</option>
        <option value="project_name">Project Name</option> 
      </select>
      
      <!-- Search Input -->
      <%= text_field_tag :search_query, params[:search_query], class: "form-control", 
        placeholder: "Search..." %>

      <!-- Search Button with Font Awesome Icon -->
      <button type="submit" class="btn btn-dark">
        <i class="fas fa-search text-white"></i> <!-- White Search Icon -->
      </button>
    </div>
  <% end %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.email %></td>
        <td><%= client.phone %></td>
        <td><%= client.address %></td>
        <td>
          <%= link_to 'Show', manager_client_path(client), class: 'btn btn-info' %>

          <% if current_user.is_manager? %>  <!-- Show these options only for managers -->
            <%= link_to 'Edit', edit_manager_client_path(client), class: 'btn btn-warning' %>
            <%= link_to 'Delete', manager_client_path(client), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
            <%= link_to "View Projects", manager_client_projects_path(client), class: "btn btn-primary" %>
          <% else %>  <!-- Show "View Projects" for users -->
            <%= link_to "View Projects", manager_client_projects_path(client), class: "btn btn-primary" %>

          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
