<h2 class="text-center">Edit Profile</h2>

<%= form_for(@user, url: profile_path, html: { method: :patch, enctype: "multipart/form-data", class: "container mt-4" }) do |f| %>
  <div class="row mb-3">
    <div class="col-md-6">
      <%= f.label :first_name, class: "form-label" %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
    <div class="col-md-6">
      <%= f.label :last_name, class: "form-label" %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>
  <div class="mb-3">
    <%= f.label :profile_photo, class: "form-label" %>
    <%= f.file_field :profile_photo, class: "form-control" %>
  </div>
  <div class="row mb-3">
    <div class="col-md-6">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="col-md-6">
      <%= f.label :password_confirmation, class: "form-label" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>
  <div class="mb-3">
    <%= f.submit "Update Profile", class: "btn btn-primary" %>
  </div>
<% end %>
<% if flash[:notice] %>  <!-- Check if profile update is successful -->
  <div class="text-center mt-4">
    <p><%= flash[:notice] %></p>
    <%= link_to "Back to Home Page", root_path, class: "btn btn-secondary" %>
  </div>
<% end %>
