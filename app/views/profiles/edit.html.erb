<%= form_for(@profile, url: profile_path(@profile), html: { method: :patch, enctype: "multipart/form-data", class: "container mt-4" }) do |f| %>
    <div class="row mb-3">
      <div class="col-md-6">
        <%= f.label :first_name, class: "form-label" %>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
      <div class="col-md-6">
        <%= f.label :last_name, class: "form-label" %>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>
    
    <div class="mb-3">
      <%= f.label :profile_photo, class: "form-label" %>
      <%= f.file_field :profile_photo, class: "form-control" %>
    </div>
    
    <div class="mb-3">
      <%= f.submit "Update Profile", class: "btn btn-primary" %>
    </div>
  <% end %>
  